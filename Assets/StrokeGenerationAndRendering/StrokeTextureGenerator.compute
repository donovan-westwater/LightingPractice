                    debugtest = (float)pixelsAdded/(float)pixelLength;

                    
                }
                
                //if(drawStrokes)_Results[uint3(pixelPos.x, pixelPos.y, k)] = float4(fuckingtest,0, 0, 1);
            }//The pixel evaluation system seems like it isn't working at all
